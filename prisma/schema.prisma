generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Session {
  id          String   @id @default(cuid())
  patientName String
  clinicianName String
  sessionDate DateTime
  duration    Int      // in milliseconds
  status      String   @default("draft") // draft, signed
  signedAt    DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  transcriptSegments TranscriptSegment[]
  noteSpans          NoteSpan[]
}

model TranscriptSegment {
  id        String   @id @default(cuid())
  sessionId String
  speaker   String   // clinician, patient
  text      String
  startMs   Int
  endMs     Int
  order     Int

  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
}

model NoteSpan {
  id                String   @id @default(cuid())
  sessionId         String
  section           String   // subjective, objective, assessment, plan
  text              String
  citations         String   // JSON array of transcript segment IDs
  needsConfirmation Boolean  @default(false)
  order             Int
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  session           Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
}
